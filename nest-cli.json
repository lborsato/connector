{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "assets": [
    {
      "include": "../*.env",
      "outDir": "./dist/"
    },
    {
      "include": "../public/*.png",
      "outDir": ".dist/"
    }
  ],
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true
        }
      }
    ]
  }

}
